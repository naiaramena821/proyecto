#include <iostream>
#include <string>
using namespace std;

class Empleado {
private:
    string nombre;
    string apellido;
    double salario;
    int canti;
public:
    Empleado(string,string);
    Empleado(double);
    bool mostrar_o_no();
    void mostrar_datos();
    double salar();
    void ordenar_nombres();
};

Empleado::Empleado(string _nombre,string _apellido)
{
    nombre = _nombre;
    apellido = _apellido;
}
Empleado::Empleado(double _salario)
{
    salario = _salario;
}

bool Empleado::mostrar_o_no()
{
    string pedir ;
    cout << "quieres mostrar los datos?" << endl;
    cout << "yes or no: ";cin >> pedir;
    if (pedir == "yes"){
        return true;
    }
    else{
        return false;
    }
}
double Empleado::salar()
{
   if (salario < 0){
    cout << 0 << endl;
   }
   else{
    int x= salario * 0.1;
    cout << salario * 12.0 - x << endl;;
}
}
void Empleado::mostrar_datos()
{
    cout << endl;
    cout << nombre << " " << apellido << " --> ";
}
